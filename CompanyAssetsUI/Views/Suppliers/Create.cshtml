@model CompanyAssetsUI.Models.Supplier

@{
    ViewData["Title"] = "Create";
}

<span class="display-4 text-info">Create</span><span> new Supplier</span>
<div>
    <a asp-action="Index" class="text-info">Back to List</a>
</div>
<hr />

<div class="col-md-8">
    <form asp-action="Create">
        <div class="form-row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-6">
                <label asp-for="SupplierName" class="control-label"></label>
                <input asp-for="SupplierName" class="form-control" />
                <span asp-validation-for="SupplierName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="SupplierDescription" class="control-label"></label>
                <input asp-for="SupplierDescription" class="form-control" />
                <span asp-validation-for="SupplierDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-8">
                <label asp-for="SupplierEmail" class="control-label"></label>
                <input asp-for="SupplierEmail" class="form-control" />
                <span asp-validation-for="SupplierEmail" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="SupplierContactFirstName" class="control-label"></label>
                <input asp-for="SupplierContactFirstName" class="form-control" />
                <span asp-validation-for="SupplierContactFirstName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="SupplierContactLastName" class="control-label"></label>
                <input asp-for="SupplierContactLastName" class="form-control" />
                <span asp-validation-for="SupplierContactLastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-8">
                <label asp-for="SupplierContactEmail" class="control-label"></label>
                <input asp-for="SupplierContactEmail" class="form-control" />
                <span asp-validation-for="SupplierContactEmail" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="SupplierCity" class="control-label"></label>
                <input asp-for="SupplierCity" class="form-control" />
                <span asp-validation-for="SupplierCity" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="CountryID" class="control-label"></label>
                <select asp-for="CountryID" class="form-control" asp-items="ViewBag.CountryID"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SupplierAddress" class="control-label"></label>
            <textarea rows="4" asp-for="SupplierAddress" class="form-control"> </textarea>
            <span asp-validation-for="SupplierAddress" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="SupplierActive" checked="" /> @Html.DisplayNameFor(model => model.SupplierActive)
            </label>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-info" />
        </div>
    </form>
</div>


<div>
    <a asp-action="Index" class="text-info">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
