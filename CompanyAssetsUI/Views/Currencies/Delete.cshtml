@model CompanyAssetsUI.Models.Currency

@{
    ViewData["Title"] = "Delete";
}

<span class="display-4 text-info">Deactivate</span>

<h6>Are you sure you want to deactivate this currency?</h6>
<div>
    <h4>@Html.DisplayFor(model => model.CurrencyName)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CurrencyName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CurrencyName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CurrencyDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CurrencyDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExchangeRate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExchangeRate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CurrencyDefault)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CurrencyDefault)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CurrencyActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CurrencyActive)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CurrencyID" />
        <input type="submit" value="Deactivate" class="btn btn-outline-danger btn-sm" /> 
        <a asp-action="Index" class="btn btn-outline-info btn-sm">Back to List</a>
    </form>
</div>
