@model CompanyAssetsUI.Models.Category

@{
    ViewData["Title"] = "Create";
}

<span class="display-4 text-info">Create</span><span> new category</span>
<p>
    <a asp-action="Index" class="btn btn-outline-info btn-sm">Back to List</a>
</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryEOLMonths" class="control-label"></label>
                <input asp-for="CategoryEOLMonths" class="form-control" />
                <span asp-validation-for="CategoryEOLMonths" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CategoryActive" checked="" /> @Html.DisplayNameFor(model => model.CategoryActive)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CategoryComment" class="control-label"></label>
                <input asp-for="CategoryComment" class="form-control" />
                <span asp-validation-for="CategoryComment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepreciationID" class="control-label"></label>
                <select asp-for="DepreciationID" class="form-control" asp-items="ViewBag.DepreciationID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-success btn-sm" />
            </div>
        </form>
    </div>
</div>

<div>
    @*<a asp-action="Index" class="text-info">Back to List</a>*@
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
