@model IEnumerable<CompanyAssetsUI.Models.Country>

@{
    ViewData["Title"] = "Index";
}

<span style="" class="display-4 text-info">Countries</span><span> deactivated </span>

<p>
    <a asp-action="Index" class="btn btn-outline-info btn-sm">Active Countries</a>
</p>
<div class="table-responsive box-shadow shadow-lg">
    <table class="table"
           id="table"
           data-toggle="table"
           data-search="true"
           data-show-columns="true"
           data-show-toggle="true"
           data-virtual-scroll="false"
           data-minimum-count-columns="3"
           data-show-button-text="true"
           data-icons-prefix="icon"
           data-icons="icons"
           data-pagination="true"
           data-page-list="[8, 10, 25, all]"
           data-show-footer="false"
           data-search-align="left"
           data-buttons-align="right"
           data-buttons-class="info"
           data-page-class="info"
           data-buttons-prefix="btn-sm btn"
           table-borderless="false"
           table-bordered="true"
           data-sortable="true">
        <thead>
            <tr>
                <th data-sortable="true">
                    @Html.DisplayNameFor(model => model.CountryName)
                </th>
                <th data-sortable="true">
                    @Html.DisplayNameFor(model => model.CountryDescription)
                </th>
                <th data-visible="false">
                    @Html.DisplayNameFor(model => model.CountryVisible)
                </th>
                <th class="text-right">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-info">
                    <td>
                        @Html.DisplayFor(modelItem => item.CountryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CountryDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CountryVisible)
                    </td>
                    <td>
                        @*<a asp-action="Edit" asp-route-id="@item.CountryId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.CountryId">Details</a> |*@
                        <a asp-action="Activate" asp-route-id="@item.CountryId" class="btn btn-outline-success btn-sm" data-toggle="tooltip" title="Activate"><i class="far fa-check-circle"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
    <script>

        window.icons = {
            refresh: 'ion-md-refresh',
            columns: 'ion-md-menu',
            toggle: 'ion-md-expand'
        }

        $(document).ready(function () {
            $('#table').DataTable();
        });


    </script>
