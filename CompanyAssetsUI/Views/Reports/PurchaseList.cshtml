
@model IList<VM_PurchaseList>


<span></span><span style="" class="display-4 text-info"> Purchase list</span>

<table class="table"
       id="table"
       data-toggle="table"
       data-search="true"
       data-show-columns="false"
       data-show-toggle="true"
       data-virtual-scroll="false"
       data-minimum-count-columns="3"
       data-show-button-text="true"
       data-icons-prefix="icon"
       data-icons="icons"
       data-pagination="true"
       data-page-list="[10, 25, 50, 100, all]"
       data-show-footer="false"
       data-search-align="left"
       data-buttons-align="right"
       data-buttons-class="info"
       data-page-class="info"
       data-buttons-prefix="btn-sm btn"
       table-borderless="true"
       table-bordered="false"
       data-sortable="true">
    <thead>
        <tr>
            <th data-sortable="true">Office</th>
            <th data-sortable="true">Product</th>
            <th data-sortable="true">Replaced by</th>
            <th data-sortable="true" class="text-right">Qty</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            //foreach (var asset in item.AssetList)
            //{
            <tr class="text-info">
                <td>@item.OfficeName</td>
                <td>@item.AssetName.</td>
                <td>@item.ReplacedBy</td>
                <td>@item.Count</td>
            </tr>
            //}
        }

    </tbody>
</table>
<script>
    window.icons = {
        refresh: 'ion-md-refresh',
        columns: 'ion-md-menu',
        toggle: 'ion-md-expand'
    }

    $(document).ready(function () {
        $('#table').DataTable();
    });

</script>
