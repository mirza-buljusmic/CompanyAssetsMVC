@model CompanyAssetsUI.Models.Currency

@{
    ViewData["Title"] = "Create";
}

<span class="display-4 text-info">Create</span><span> new currency</span>
<div>
    <a asp-action="Index" class="btn btn-outline-info btn-sm">Back to List</a>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CurrencyName" class="control-label"></label>
                <input asp-for="CurrencyName" class="form-control" />
                <span asp-validation-for="CurrencyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrencyDescription" class="control-label"></label>
                <input asp-for="CurrencyDescription" class="form-control" />
                <span asp-validation-for="CurrencyDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExchangeRate" class="control-label"></label>
                <input asp-for="ExchangeRate" class="form-control" />
                <span asp-validation-for="ExchangeRate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CurrencyDefault" /> @Html.DisplayNameFor(model => model.CurrencyDefault)
                </label>
            </div>
            <div class="form-group form-check">

                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" checked="" asp-for="CurrencyActive" /> @Html.DisplayNameFor(model => model.CurrencyActive)
                </label>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-info btn-sm" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
