@model CompanyAssetsUI.Models.Office

@{
    ViewData["Title"] = "Delete";
}

<span class="display-4 text-info">Deactivate</span>

<h6>Are you sure you want to deactivate this office?</h6>
<div>
    <h4>@Html.DisplayFor(model=>model.OfficeName)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OfficeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OfficeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OfficeDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OfficeDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OfficeActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OfficeActive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Currency)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Currency.CurrencyName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Country.CountryDescription)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="OfficeID" />
        <input type="submit" value="Deactivate" class="btn btn-danger btn-sm" /> 
        <a asp-action="Index" class="btn btn-outline-info btn-sm">Back to List</a>
    </form>
</div>
