@model CompanyAssetsUI.Models.Catalogue

@{
    ViewData["Title"] = "Create";
}

<span class="display-4 text-info">Create</span><span> new cataloge product</span>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDescription" class="control-label"></label>
                <input asp-for="ProductDescription" class="form-control" />
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryID" class="control-label"></label>
                <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.CategoryID"></select>
            </div>
            <div class="form-group">
                <label asp-for="CataloguePrice" class="control-label"></label>
                <input asp-for="CataloguePrice" class="form-control" />
                <span asp-validation-for="CataloguePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupplierProductID" class="control-label"></label>
                <input asp-for="SupplierProductID" class="form-control" />
                <span asp-validation-for="SupplierProductID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupplierID" class="control-label"></label>
                <select asp-for="SupplierID" class="form-control" asp-items="ViewBag.SupplierID"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Obsolete" /> @Html.DisplayNameFor(model => model.Obsolete)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" checked="" asp-for="CatalogueItemActive" /> @Html.DisplayNameFor(model => model.CatalogueItemActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-success btn-sm" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="text-info">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
