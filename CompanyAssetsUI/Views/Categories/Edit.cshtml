@model CompanyAssetsUI.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<span class="display-4 text-info">Edit</span><span> catalogue product</span>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId" />
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryEOLMonths" class="control-label"></label>
                <input asp-for="CategoryEOLMonths" class="form-control" />
                <span asp-validation-for="CategoryEOLMonths" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CategoryActive" /> @Html.DisplayNameFor(model => model.CategoryActive)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CategoryComment" class="control-label"></label>
                <input asp-for="CategoryComment" class="form-control" />
                <span asp-validation-for="CategoryComment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepreciationID" class="control-label"></label>
                <select asp-for="DepreciationID" class="form-control" asp-items="ViewBag.DepreciationID"></select>
                <span asp-validation-for="DepreciationID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-success btn-sm" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="text-info">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
