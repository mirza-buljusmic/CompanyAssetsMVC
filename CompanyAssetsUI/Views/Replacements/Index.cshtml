@model IEnumerable<CompanyAssetsUI.Models.Replacement>

@{
    ViewData["Title"] = "Index";
}

<span style="" class="display-4 text-info">Replacements</span><span> active </span>

<p>
    <a asp-action="Create" class="btn btn-outline-info btn-sm">Create New</a>
</p>
<div class="table-responsive box-shadow shadow-lg">
    <table class="table"
           id="table"
           data-toggle="table"
           data-search="true"
           data-show-columns="true"
           data-show-toggle="true"
           data-virtual-scroll="false"
           data-minimum-count-columns="3"
           data-show-button-text="true"
           data-icons-prefix="icon"
           data-icons="icons"
           data-pagination="true"
           data-page-list="[10, 25, 50, 100, all]"
           data-show-footer="false"
           data-search-align="left"
           data-buttons-align="right"
           data-buttons-class="info"
           data-page-class="info"
           data-buttons-prefix="btn-sm btn"
           table-borderless="false"
           table-bordered="true"
           data-sortable="true">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Replaced)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Replacing)
                </th>
                <th class="text-right">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-info">
                    <td>
                        @Html.DisplayFor(modelItem => item.Replaced.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Replacing.ProductName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ReplacementID" class="btn btn-outline-info btn-sm" data-toggle="tooltip" title="Edit"><i class="fas fa-edit"></i></a> &nbsp;
                        <a asp-action="Details" asp-route-id="@item.ReplacementID" class="btn btn-outline-info btn-sm" data-toggle="tooltip" title="Details"><i class="fas fa-info-circle"></i></a> &nbsp;
                        <a asp-action="Delete" asp-route-id="@item.ReplacementID" class="btn btn-outline-danger btn-sm" data-toggle="tooltip" title="Delete"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
    <script>

        window.icons = {
            refresh: 'ion-md-refresh',
            columns: 'ion-md-menu',
            toggle: 'ion-md-expand'
        }

        $(document).ready(function () {
            $('#table').DataTable();
        });


    </script>